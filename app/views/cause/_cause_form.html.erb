<% if @cause.errors.any? %>
                                      <div class="alert alert-danger fade in">
                                        <p><b>Please correct the following <%= pluralize(@cause.errors.count, "error") %>:</b></p>
                                     
                                        <ul>
                                        <% @cause.errors.messages.values.each do |msg| %>
                                            <%msg.each do  |m| %>
                                                <li><%= m %></li>
                                            <%end %>
                                        <% end %>
                                        </ul>
                                      </div>
                                    <% end %>


                                    <fieldset class="no-padding"> 

                                     <section class="no-margin">
                                            <div class="row">

                                                <section class="col-xs-12">
                                                   
                                                	<label>What is the name of your cause?</label>
                                                    <label class="input">

                                                        <i class="icon-append fa fa-user"></i>
                                                        <%= f.text_field :charityname, :placeholder=>"Cause Name" %>                                               
                                                    </label>
                                                
                                                    <br/>
                                                    

                                                    <label>What is the URL of your cause?</label>
                                                    <label class="input">

                                                        <i class="icon-append fa fa-globe"></i>
                                                        <%= f.text_field :website, :placeholder=>"Website" %>                                                       
                                                    </label>

                                                    <br/>                                             
                                                    
                                                    <label>What is the URL of your facebook page? (Optional)</label>
