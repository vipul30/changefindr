
       
    <!-- MAIN CONTENT -->
    	

    <section class="slice slice-lg bg-image" style="background: url(/images/patterns/squairy-light.png) repeat fixed !important;">
        <div class="wp-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7 col-md-offset-1 col-sm-5 col-sm-offset-1">
                    	<div class="row">
                    		
						 <% if session[:user_firstname] == nil %>
						 <div class="wp-block default user-form no-margin">
                            <br/><br/><br/>
						 	<p style="text-align:center">It's easy to create your own cause and start raising funds through unused gift card donations.<br/><br/>Simply
						 	<a href="/sign_up/index">register</a> 
						 	 and complete a short form.  <br/><br/>We will contact you once we have reviewed your information.
						 	</p>
                            <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                        </div>
						 <% else %>
                    		<div class="col-md-12">

							<div class="wp-block default user-form no-margin">

	                            <div class="form-header">
	                                <h2>Tell us about your cause</h2>
	                            </div>


						      <div class="form-body">
                                <%= form_for(@cause, :url => {:action => 'create'}, :html => {:class => 'sky-form', :id => "myform"}) do |f| %>

                                    <%= render(:partial => "cause_form", :locals => {:f => f}) %>


                                    <fieldset>          
                                      
                                        <section>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    
                                                    <br/>
                                                    <button id="register_button" class="btn btn-base btn-icon btn-icon-right btn-sign-in" type="button"
                                                    onClick="this.form.submit(); this.disabled=true;"
                                                    >
                                                        <span>Submit Cause For Approval</span>
                                                    </button>
                                                </div>
                                                
                                        </section>
                                    </fieldset>

                                <!--/form-->
                                <% end %>  
                            </div>

                            
			            </div>
			       	</div>

			       		 <% end %>
			    </div>
                    </div>
                    <div class="col-md-4">
                    	<!-- SIDEBAR - BLOG -->
                        <div class="sidebar">
    
                            <%= render partial: "widgets/newsletter.html.erb" %>   

                            <%= render partial: "widgets/testimonials.html.erb" %> 
    

                        </div> 
                    	              
    				</div>
                </div>
            </div>
        </div>
    </section>

   
