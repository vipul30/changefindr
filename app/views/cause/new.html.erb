
       
    <!-- MAIN CONTENT -->
    	

    <section class="slice slice-lg bg-image" style="background-image:url(/images/backgrounds/full-bg-2.jpg)">
        <div class="wp-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7 col-md-offset-1 col-sm-5 col-sm-offset-1">
                    	<div class="row">
                    		
						 <% if session[:user_firstname] == nil %>
						 <br/><br/><br/><br/><br/><br/>
						 	<p>It's easy to create your own cause and start raising funds through unused gift card donations.  Simply
						 	<a href="/sign_up/index">register</a> 
						 	 and complete a short form.  We will contact you once we have reviewed your information.
						 	</p>
						 <% else %>
                    		<div class="col-md-12">

							<div class="wp-block default user-form no-margin">
	                            <div class="form-header">
	                                <h2>Tell us about your cause</h2>
	                            </div>

						<div class="form-body">
                                <%= form_for(@cause, :url => {:action => 'create'}, :html => {:class => 'sky-form', :id => "myform"}) do |f| %>

                                    <% if @cause.errors.any? %>
                                      <div class="alert alert-danger fade in">
                                        <p><b>Please correct the following <%= pluralize(@cause.errors.count, "error") %>:</b></p>
                                     
                                        <ul>
                                        <% @cause.errors.messages.values.each do |msg| %>
                                            <%msg.each do  |m| %>
                                                <li><%= m %></li>
                                            <%end %>
                                        <% end %>
                                        </ul>
                                      </div>
                                    <% end %>


                                    <fieldset class="no-padding"> 

                                     <section class="no-margin">
                                            <div class="row">

                                                <section class="col-xs-12">
                                                   
                                                	<label>What is the name of your cause?</label>
                                                    <label class="input">

                                                        <i class="icon-append fa fa-user"></i>
                                                        <%= f.text_field :charityname, :placeholder=>"Cause Name" %>                                               
                                                    </label>
                                                
                                                    <br/>
                                                    

                                                    <label>What is the URL of your cause?</label>
                                                    <label class="input">

                                                        <i class="icon-append fa fa-globe"></i>
                                                        <%= f.text_field :website, :placeholder=>"Website" %>                                                       
                                                    </label>

                                                    <br/>                                             
                                                    
                                                    <label>What is the URL of your facebook page? (Optional)</label>
                                                    <label class="input">
                                                    	
                                                        <i class="icon-append fa fa-globe"></i>
                                                        <%= f.text_field :facebookurl, :placeholder=>"http://www.facebook.com/mycause" %>
                                             
                                                    </label>

                                                    <br/>
                                                    
                                                    <label>Description</label>
                                                    <label class="input">
					                                    
					                                    <%= f.text_area :description, :placeholder=>"Brief description of your cause.", :class=>"form-control"  %>
					                                    
					                                </label>
                                           
                                                    <br/>

                                                    <label>Please upload a logo for your cause.</label>
                                                    <label class="input">
                                                    	
                                                        <i class="icon-append fa fa-upload"></i>
                                                        <%= f.file_field :logo %>	
                                             
                                                    </label>

                                                    <br/>

                                                    <label>Please upload an image for your cause.  This will be used as a banner for your page.  (Optional)</label>
                                                    <label class="input">
                                                    	
                                                        <i class="icon-append fa fa-upload"></i>
                                                        <%= f.file_field :image1 %>	
                                             
                                                    </label>

                                                    <br/>

                                                    <label>Please upload an image for your cause.  This will be used as a banner for your page.  (Optional)</label>
                                                    <label class="input">
                                                    	
                                                        <i class="icon-append fa fa-upload"></i>
                                                        <%= f.file_field :image2 %>	
                                             
                                                    </label>

                                                     <br/>

                                                    <label>Please upload an image for your cause.  This will be used as a banner for your page.  (Optional)</label>
                                                    <label class="input">
                                                    	
                                                        <i class="icon-append fa fa-upload"></i>
                                                        <%= f.file_field :image3 %>	
                                             
                                                    </label>
                                                      
                                                </section>
                                          
                                            </div>


                                        </section>

                                       
                                    </fieldset>  

                                    <fieldset>
                                        
                                      
                                        <section>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    
                                                    <br>
                                                    <button id="register_button" class="btn btn-base btn-icon btn-icon-right btn-sign-in" type="button"
                                                    onClick="this.form.submit(); this.disabled=true;"
                                                    >
                                                        <span>Submit Cause For Approval</span>
                                                    </button>
                                                </div>
                                                
                                        </section>
                                    </fieldset>
                                <!--/form-->
                                <% end %>  
                            </div>

                            
			            </div>
			       		 </div>

			       		 <% end %>
			    </div>
                    </div>
                    <div class="col-md-4">
                    	<!-- SIDEBAR - BLOG -->
                    	<div class="sidebar">
	
							<!-- NEWSLETTER WIDGET -->
	                        <div class="panel panel-default panel-sidebar-1">
	                            <div class="panel-heading"><h2>Sign up for our newsletter</h2></div>
	                            <form class="sky-form" role="form">
	                                <div class="panel-body">
	                                    <p>
	                                        Sign up if you would like to receive occasional treats from us.
	                                    </p>
	                                    <section>
	                                        <div class="form-group">
	                                            <label class="label sr-only">Password</label>
	                                            <label class="input">
	                                                <input type="email" name="email" placeholder="name@example.com">
	                                            </label>
	                                        </div>     
	                                    </section>
	                                    
	                                </div>
	                                <button type="submit" class="btn btn-lg btn-block-bm btn-alt btn-icon btn-icon-right btn-envelope">
	                                    <span>Sign Me Up</span>
	                                </button>
	                            </form>   
	                        </div>

							<!-- TESTIMONIAL WIDGET --> 
	                        <div class="panel panel-default panel-sidebar-1">
	                            <div class="panel-heading"><h2>Testimonials</h2></div>
	                            <div class="owl-carousel owl-carousel-single">
	                                <div>
	                                    <div class="wp-block testimonial style-1 base">
	                                       
	                                        <div class="wp-block-body"> 
	                                            <p>
	                                                <i class="fa fa-quote-left"></i>Changefindr made it very easy to collect funds through unused gift cards.
	                                            </p>
	                                        </div>
	                                        <div class="testimonial-author light">  
	                                            
	                                            <div class="author-info">
	                                                <span class="author-name">Ounie Phakousonh</span>
	                                                <small class="author-pos">CoderDojo</small>
	                                            </div>
	                                        </div>
	                                    </div>
	                                </div>
	                                
	                            </div>

	                             <div class="owl-carousel owl-carousel-single">
	                                <div>
	                                    <div class="wp-block testimonial style-1 base">
	                                       
	                                        <div class="wp-block-body"> 
	                                            <p>
	                                                <i class="fa fa-quote-left"></i>Changefindr gives me the opportunity to contribute to my favourite cause even in difficult times.
	                                            </p>
	                                        </div>
	                                        <div class="testimonial-author light">  
	                                            
	                                            <div class="author-info">
	                                                <span class="author-name">Seema Makker</span>
	                                                <small class="author-pos">Donor</small>
	                                            </div>
	                                        </div>
	                                    </div>
	                                </div>
	                                
	                            </div>
	                        </div>

    					</div>                    
    				</div>
                </div>
            </div>
        </div>
    </section>

   
