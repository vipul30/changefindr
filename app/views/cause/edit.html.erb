
       
    <!-- MAIN CONTENT -->
    <section class="slice slice-lg bg-image" style="background-image:url(/images/backgrounds/full-bg-2.jpg)">
        <div class="wp-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7 col-md-offset-1 col-sm-5 col-sm-offset-1">
                    	<div class="row">
                    		
						 <% if session[:user_firstname] == nil %>
						 <br/><br/><br/><br/><br/><br/>
						 	<p>It's easy to create your own cause and start raising funds through unused gift card donations.  Simply
						 	<a href="/sign_up/index">register</a> 
						 	 and complete a short form.  We will contact you once we have reviewed your information.
						 	</p>
						 <% else %>
                    		<div class="col-md-12">

							<div class="wp-block default user-form no-margin">
	                            <div class="form-header">
	                                <h2>Tell us about your cause</h2>
	                            </div>

						      <div class="form-body">
                                <%= form_for(@cause, :url => {:action => 'update', :id => @cause.charityid}, :method => :POST, :html => {:class => 'sky-form', :id => "myform"}) do |f| %>

                                    <%= render(:partial => "cause_form", :locals => {:f => f}) %>
							
									
                                   
                                    <% if session[:roleid] == 1 || session[:userid] == :userid%>
					                   Is approved for accepting gift card donations?&nbsp;&nbsp;               
					                  <%= f.check_box :isapproved %>
					                                    
					                   <br/><br/>

					                  Is this a featured cause?&nbsp;&nbsp;           
					                  <%= f.check_box :isfeatured %>
                                    <% end %>
					                                    
					                 

                                    <fieldset>          
                                      
                                        <section>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    
                                                    <br>
                                                    <button id="register_button" class="btn btn-base btn-icon btn-icon-right btn-sign-in" type="button"
                                                    onClick="this.form.submit(); this.disabled=true;"
                                                    >
                                                        <span>Update Cause</span>
                                                    </button>
                                                </div>
                                                
                                        </section>
                                    </fieldset>

                                <!--/form-->
                                <% end %>  
                            </div>

                            
			            </div>
			       		 </div>

			       		 <% end %>
			    </div>
                    </div>
                    <div class="col-md-4">
                    	<!-- SIDEBAR -->
                        <div class="sidebar">
    
                            <%= render partial: "widgets/newsletter.html.erb" %>   

                            <%= render partial: "widgets/testimonials.html.erb" %> 
    

                        </div>                  
    				</div>
                </div>
            </div>
        </div>
    </section>

   
