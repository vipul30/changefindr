
       
    <!-- MAIN CONTENT -->
    <section class="slice slice-lg bg-image" style="background-image:url(/images/backgrounds/full-bg-2.jpg)">
        <div class="wp-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7 col-md-offset-2 col-sm-5 col-sm-offset-2">
                    	<div class="row">
                    		
						 <% if session[:roleid] != 1 %>
						 <br/><br/><br/><br/><br/><br/>
						 	<p>You are not authorized to view this page.
						 	</p>
						 <% else %>
                    		<div class="col-md-12">

							<div class="wp-block default user-form no-margin">
	                            <div class="form-header">
	                                <h2>Merchant Information</h2>
	                            </div>

						      <div class="form-body">
                                <%= form_for(@merchant, :url => {:action => 'update', :id => @merchant.merchantid}, :method => :POST, :html => {:class => 'sky-form', :id => "myform"}) do |f| %>

                                    <%= render(:partial => "merchant_form", :locals => {:f => f}) %>

                                    <fieldset>          
                                      
                                        <section>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    
                                                    <br>
                                                    <button id="register_button" class="btn btn-base btn-icon btn-icon-right btn-sign-in" type="button"
                                                    onClick="this.form.submit(); this.disabled=true;"
                                                    >
                                                        <span>Update Merchant</span>
                                                    </button>
                                                </div>
                                                
                                        </section>
                                    </fieldset>

                                <!--/form-->
                                <% end %>  
                            </div>

                            
			            </div>
			       		 </div>

			       		 <% end %>
			    </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>

   
