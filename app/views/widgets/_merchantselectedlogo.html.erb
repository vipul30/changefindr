<% if @giftcard.merchant



        usermerchantlogo = @giftcard.merchant.logo.url
        usermerchantname = @giftcard.merchant.merchantname

    else
        usermerchantlogo = CLOUDFRONT_HOST + "/images/giftcard-3.jpg"
        usermerchantname = "Gift Card"

    end 
%>

    <div class="panel panel-default panel-sidebar-1 visible-lg visible-md" id="merchantinfo">
        <div class="wp-block default">
        <div class="figure">
        	<img alt="" id="merchantlogo" src="<%=usermerchantlogo%>" class="img-responsive">     
        </div>

        <div class="wp-block-body" style="text-align:center">
            <h2 class="title" id="merchantname"><%= usermerchantname %></h2>
            <p>Card information can be found here.</p>
            <img alt="" id="" src="/images/credit_card_helper.png" class="img-responsive">   
        </div>

    </div>
    </div>